<div class="sidebar">

  <aside class="widget">
    <h3 class="widget__title">Recent Stories</h3>
    <div class="widget__body recent-posts">
    </div>
  </aside>

  <aside class="widget">
    <h3 class="widget__title">Subscribe</h3>
    <div class="widget__body">
      {{!-- Replace the action value with your one from MailChimp --}}
      <form action="//aspirethemes.us12.list-manage.com/subscribe/post?u=9723f3c5c3a2637fbba3bc673&amp;id=7b50db9989" method="post" target="_blank">
        <input type="email" name="EMAIL" placeholder="Your email address">
        <input type="submit" class="button button--expand" value="SIGN UP">
      </form>
    </div>
  </aside>

  <aside class="widget">
    <h3 class="widget__title">Follow Us</h3>
    <div class="widget__body widget__body--social-icons">
      <ul class="social-icons sidebar-social-icons list-bare clearfix">
        <li>
          <a href="http://www.twitter.com/{{! Add Twitter handle }}" target="_blank">
            <div data-icon="ei-sc-twitter" data-size="s"></div>
          </a>
        </li>
        <li>
          <a href="https://www.facebook.com/{{! Add Facebook handle }}" target="_blank">
            <div data-icon="ei-sc-facebook" data-size="s"></div>
          </a>
        </li>
        <li>
          <a href="https://instagram.com/{{! Add Instagram handle }}" target="_blank">
            <div data-icon="ei-sc-instagram" data-size="s"></div>
          </a>
        </li>
        <li>
          <a href="https://instagram.com/{{! Add Instagram handle }}" target="_blank" class="block">
            <div data-icon="ei-sc-pinterest" data-size="s"></div>
          </a>
        </li>
        <li>
          <a href="{{! Add Vimeo url }}" target="_blank" class="block">
            <div data-icon="ei-sc-vimeo" data-size="s"></div>
          </a>
        </li>
        <li>
          <a href="{{! Add Google+ url }}" target="_blank" class="block">
            <div data-icon="ei-sc-google-plus" data-size="s"></div>
          </a>
        </li>
        <li>
          <a href="{{! Add YouTube+ url }}" target="_blank" class="block">
            <div data-icon="ei-sc-youtube" data-size="s"></div>
          </a>
        </li>
        <li>
          <a href="{{! Add Soundcloud url }}" target="_blank" class="block">
            <div data-icon="ei-sc-soundcloud" data-size="s"></div>
          </a>
        </li>
        <li>
          <a href="{{! Add Tumblr url }}" target="_blank" class="block">
            <div data-icon="ei-sc-tumblr" data-size="s"></div>
          </a>
        </li>
        <li>
          <a href="{{! Add location url }}" target="_blank" class="block">
            <div data-icon="ei-location" data-size="s"></div>
          </a>
        </li>
      </ul>
    </div>
  </aside>

  <aside class="widget">
    <div class="widget__body">
      <a href="#">
        <img src="{{asset "images/ads.jpg"}}" alt="Ad">
      </a>
    </div>
  </aside>

  <aside class="widget widget--twitter-wrap">
    <h3 class="widget__title">Latest Tweets</h3>
    <div class="widget__body twitter-widget">
      <div id="twitter-widget"></div>
      <a class="button button--expand button--twitter" href="http://www.twitter.com/ohhiandie" target="_blank">
        <div data-icon="ei-sc-twitter" data-size="s"></div>Follow on Twitter
      </a>
    </div>
  </aside>

